  <div class="mobile-menu-wrap">
    <nav class="gnavi-sp" id="gnavi-sp">
      <ul class="menu">
        <li>
          <%= link_to root_path do %>プロフィール
          <% end %>
          <ul class="sub-menu">
            <li>
