              <%= link_to root_path do %>動画編集
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>プログラミング
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>転職活動
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>ポートフォリオ
              <% end %>
            </li>
          </ul>
        </li>
    </nav>
  </div>

  <div class="hamburger" id="js-hamburger" onclick="toggleNav()">
    <p>MENU</p>
    <span class="hamburger__line hamburger__line--1"></span>
    <span class="hamburger__line hamburger__line--2"></span>
    <span class="hamburger__line hamburger__line--3"></span>
  </div>
