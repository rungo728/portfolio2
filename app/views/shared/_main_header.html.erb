<header class="main-header">
  <h1 id= "header-logo" class= "header-logo">
    <%= link_to root_path do %>
    <span><a href="https://fontmeme.com/ja/font-trolls/"><img src="https://fontmeme.com/permalink/200314/a99fd491f62f75c89ee2d828e5ec7f83.png" alt="font-trolls" border="0"></a></span>
    <% end %>
  </h1>
  <nav id="gnavi-pc" class="gnavi-pc">
    <div class="header__menu-box">
      <ul class="image-gallery">
        <li>
          <%= link_to root_path ,class:"writer" do %>By Kaoru Koyama
          <span>Writer</span>
          <% end %>
        </li>
        <li class="header__menu-box--center__category">
          <%= link_to root_path,class:"header__menu-box--center__icon" do %>ご紹介
          <i class="fas fa-sort-down"></i>
          <span class="caret">Profile</span>
          <% end %>
          <ul class="header__menu-box--center__parents">
            <li>
              <%= link_to root_path do %>プロフィール
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>料理
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>プログラミング
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>ブログ
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>ゲーム
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>フリーランス
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>動画編集
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>転職活動
              <% end %>
            </li>
          </ul>
        </li>
        <li class="bookingnow">
          <%= link_to root_path do %>ポートフォリオ
          <span>Portfolio</span>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>
  <div class="header-icon">
    <ul class="clearfix">
      <li class="base">
      </li>
      <li class="cart">
        <%= link_to root_path do %>
        <i class="fas fa-shopping-cart"></i>	
        <% end %>
      </li>
    </ul>
  </div>
  <%# 隠しメニューが非表示の時に使うclass %>
  <%# <div id="mobile-menu-toggle" class="mobile-menu-toggle">
    <img src="//youange.com/shop/images/mobile-menu-toggle.png">
  </div> %>
